<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/chattingRoom_imageProfile"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/img_people_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chattingRoom_name"
        android:layout_marginTop="23dp"
        android:gravity="left"
        android:textSize="17sp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/chattingRoom_name"
            android:id="@+id/people_1line"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textSize="14sp"
            android:text="@string/last_messeage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:gravity="right"
            android:text="@string/time" />
    </LinearLayout>
</LinearLayout>